@model IEnumerable<CxC.Datos.FCCxCFormaPago>

@{
    ViewBag.Title = "Index";
}

<h2>Lista</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdFormaPago)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DscFormaPago)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodEstado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdFormaPago)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DscFormaPago)
          
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.CodEstado)*@
            @{
                var cod = item.CodEstado;
                var lista = (List<SelectListItem>)ViewBag.codigoEstado;
                foreach (var row in lista)
                {
                    if (row.Value == cod)
                    {
                        @Html.Label(row.Text);
                         
                    }
                    
                }

            }
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new {  id=item.IdFormaPago }) |
            @Html.ActionLink("Detalle", "Details", new { id = item.IdFormaPago }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.IdFormaPago })
        </td>
    </tr>
}

</table>
